.col-md-8.col-md-offset-2
  .panel.panel-default
    .panel-heading
      .panel-title Question .1
    .panel-body= @question.title.html_safe
  %br
  #answers.list-group
    - (1..5).each do |i|
      - if @question["option#{i}"].present?
        = link_to "#", onclick: "selectOption($(this)); return false", class: 'list-group-item' do
          %span.fa.fa-square-o
          &nbsp;
          = @question["option#{i}"]

  %div
    .pull-left= link_to "Next Question", "#", class: 'btn btn-primary'
    .pull-right
      = link_to "Skip Question", "#", class: 'btn btn-default'
      = link_to "Quit Paper", "#", class: 'btn btn-danger'
    .clearfix

:javascript
  function selectOption(element){
    var checked = $('#answers .fa-check-square-o');
    checked.removeClass('fa-check-square-o');
    checked.addClass('fa-square-o');

    element = element.find('span.fa');
    element.removeClass('fa-square-o');
    element.addClass('fa-check-square-o');
  }
