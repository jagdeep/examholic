.col-md-4.col-md-offset-4
  .panel.panel-default
    .panel-heading #{resource_name.to_s.humanize} - Log in
    .panel-body.row
      .col-md-10.col-md-offset-1
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true
            = f.input :password, required: false
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Log in"
        %br
        - if resource_name == :teacher
          Are you a new teacher?
          = link_to "Register", new_teacher_registration_path
        - else
          Are you a new student?
          = link_to "Register", new_student_registration_path
        =# render "devise/shared/links"
