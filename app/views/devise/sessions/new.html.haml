.col-md-4.col-md-offset-4
  .panel.panel-default
    .panel-heading #{resource_name.to_s.humanize} - Log in
    .panel-body.row
      .col-md-10.col-md-offset-1
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true
            = f.input :password, required: false
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .form-actions
            = f.button :submit, "Log in"
        %br
        - if resource.class == Student
          Are you a teacher?
          = link_to "Teacher Login", new_teacher_session_path
        - else
          Are you a student?
          = link_to "Student Login", new_student_session_path
        =# render "devise/shared/links"
