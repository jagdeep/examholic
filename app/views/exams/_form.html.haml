= simple_form_for @exam, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = error_span(@exam[:name])
  = f.input :duration
  = error_span(@exam[:duration])
  = f.input :start_time
  = error_span(@exam[:start_time])
  = f.input :end_time
  = error_span(@exam[:end_time])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), exams_path, :class => 'btn btn-default'
