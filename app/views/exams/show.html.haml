- model_class = Exam
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:account_id) + ':'
  %br
  = @exam.account_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @exam.name
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @exam.status
%p
  %strong= model_class.human_attribute_name(:duration) + ':'
  %br
  = @exam.duration
%p
  %strong= model_class.human_attribute_name(:start_time) + ':'
  %br
  = @exam.start_time
%p
  %strong= model_class.human_attribute_name(:end_time) + ':'
  %br
  = @exam.end_time


= link_to t('.back', :default => t("helpers.links.back")), exams_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_exam_path(@exam), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), exam_path(@exam), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
