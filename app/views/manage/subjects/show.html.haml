- model_class = Subject
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @subject.name

= link_to t('.back', :default => t("helpers.links.back")), manage_account_subjects_path(@current_account), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_manage_account_subject_path(@current_account, @subject), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), manage_account_subject_path(@current_account, @subject), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
