.col-md-4.col-md-offset-4
  .panel.panel-default
    .panel-heading #{action_name.humanize} Topic
    .panel-body.row
      .col-md-10.col-md-offset-1
        = simple_form_for([:manage, @current_account, @subject, @topic]) do |f|
          = f.error_notification

          .form-inputs
            = f.input :subject_id, as: :select, collection: Subject.all
            = f.input :name

          .form-actions
            = f.button :submit
