.col-md-4.col-md-offset-4
  .panel.panel-default
    .panel-heading #{action_name.humanize} Batch
    .panel-body.row
      .col-md-10.col-md-offset-1
        = simple_form_for [:manage, @current_account, @batch] do |f|
          = f.error_notification

          .form-inputs
            = f.input :name

          .form-actions
            = f.button :submit, :class => "btn btn-primary"
            = link_to "Cancel", manage_account_batches_path(@current_account), :class => "btn btn-default"
