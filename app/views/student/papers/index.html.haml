- @papers.in_groups_of(2, false) do |paper_group|
  .row
    - paper_group.each do |paper|
      .col-md-6
        .panel.panel-default
          .panel-heading= paper.name
          %ul.list-group
            %li.list-group-item
              .pull-left Duration
              .pull-right= paper.duration
              .clearfix
            %li.list-group-item
              .pull-left Status
              .pull-right= paper.status
              .clearfix
            %li.list-group-item
              .pull-left Marks per question
              .pull-right= paper.marks_per_question
              .clearfix
            %li.list-group-item
              .pull-left Negative marks per question
              .pull-right= paper.negative_marks_per_question
              .clearfix
            %li.list-group-item
              .pull-left= link_to 'Questions', student_account_exam_paper_questions_path(@current_account, @exam, paper)
              .pull-right= link_to paper.questions.count, student_account_exam_paper_questions_path(@current_account, @exam, paper)
              .clearfix
.clearfix
